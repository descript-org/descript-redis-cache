# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Data files
[*.{json, yml}]
indent_size = 2

# Makefiles
[*{M,m}akefile]
indent_style = tab
